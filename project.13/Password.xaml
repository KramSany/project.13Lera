<Window x:Class="project._13.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project._13"
        mc:Ignorable="d"
        Title="Авторизация" Height="100" Width="300" WindowStartupLocation="CenterOwner" Activated="Window_Activated">
    <StackPanel>
        <PasswordBox x:Name="txtPassword" PasswordChar="*"/>
        <Separator Width="0"/>
        <Button Content="Войти" x:Name="btnSignIn" Click="btnSignIn_Click"/>
        <Separator Width="0"/>
        <Button Content="Отмена" x:Name="btnCancel" Click="btnCancel_Click"/>
    </StackPanel>
</Window>
